<?xml version="1.0" encoding="UTF-8" ?>

<launch>
    <arg name="robot" default="X1"/>
    <arg name="robot_type" default="explorer_x1"/>
    <arg name="bag" default="$(find rpz_planning)/data/bags/trajopt_input/explorer_x1_2021-06-03-09-59-43.bag"/>
    <arg name="rviz" default="true"/>
    <arg name="start" default="0.0"/>
    <arg name="rate" default="1.0"/>

    <param name="use_sim_time" value="true"/>

    <!--
        Workaround for /tf_static problems with rosbag.
        TODO Watch https://github.com/ros/geometry2/issues/181
    -->
    <node name="play_tf_static" pkg="nifti_vision_data" type="play_tf_static"
         args="$(arg bag)" output="log">
        <remap from="~tf_static" to="/tf_static"/>
    </node>

    <!-- ROSBAG -->
    <node name="rosbag_play_rpz" pkg="rosbag" type="play"
          args="--clock -k -d 3.0 -s $(arg start) -r $(arg rate) $(arg bag) --pause">

        <remap if="$(eval 'marv' in robot_type.lower())"
               from="/$(arg robot)/local_map_slow" to="/$(arg robot)/local_map"/>

        <remap if="$(eval 'explorer_x1' in robot_type.lower())"
               from="/$(arg robot)/local_map_slow" to="/$(arg robot)/local_map"/>

        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="/traversability" to="/$(arg robot)/traversability"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="/path" to="/$(arg robot)/path"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="/traversability" to="/$(arg robot)/local_map"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="/viz/camera_0/camera_info" to="/$(arg robot)/viz/camera_0/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="/viz/camera_1/camera_info" to="/$(arg robot)/viz/camera_1/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="/viz/camera_2/camera_info" to="/$(arg robot)/viz/camera_2/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="/viz/camera_3/camera_info" to="/$(arg robot)/viz/camera_3/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="/viz/camera_4/camera_info" to="/$(arg robot)/viz/camera_4/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="/viz/camera_5/camera_info" to="/$(arg robot)/viz/camera_5/camera_info"/>
    </node>

    <!-- Travelled distance publisher -->
    <include ns="$(arg robot)" file="$(dirname)/travelled_dist.launch" pass_all_args="true">
        <arg name="route_wps_dist" value="2.0"/>
    </include>

    <!-- Ground truth world publisher -->
    <include file="$(dirname)/ground_truth_world_pub.launch" pass_all_args="true"/>

    <node ns="$(arg robot)" name="rewarder" pkg="rpz_planning" type="rewarder.py" output="screen">
        <rosparam subst_value="true">
            map_frame: subt
            robot_frame: $(arg robot)/base_footprint
            max_age: 100.0
            num_cameras: 1
            map_step: 2
            device: cuda:0
            <!-- device: cpu -->
        </rosparam>

        <rosparam if="$(eval robot_type == 'marv')">
            num_cameras: 7
        </rosparam>
        <rosparam if="$(eval robot_type == 'explorer_x1')">
            num_cameras: 4
        </rosparam>
        <rosparam if="$(eval robot_type == 'tradr')">
            num_cameras: 6
            robot_frame: base_footprint
        </rosparam>
        <!-- marv cameras topics -->
        <remap if="$(eval robot_type == 'marv')"
               from="camera_info_0" to="front/optical/camera_info"/>
        <remap if="$(eval robot_type == 'marv')"
               from="camera_info_1" to="omni/camera_0/optical/camera_info"/>
        <remap if="$(eval robot_type == 'marv')"
               from="camera_info_2" to="omni/camera_1/optical/camera_info"/>
        <remap if="$(eval robot_type == 'marv')"
               from="camera_info_3" to="omni/camera_2/optical/camera_info"/>
        <remap if="$(eval robot_type == 'marv')"
               from="camera_info_4" to="omni/camera_3/optical/camera_info"/>
        <remap if="$(eval robot_type == 'marv')"
               from="camera_info_5" to="omni/camera_4/optical/camera_info"/>
        <remap if="$(eval robot_type == 'marv')"
               from="camera_info_6" to="rear/optical/camera_info"/>

        <!-- explorer cameras topics -->
        <remap if="$(eval 'explorer_x1' in robot_type.lower())"
               from="camera_info_0" to="front_rgbd/optical/camera_info"/>
        <remap if="$(eval 'explorer_x1' in robot_type.lower())"
               from="camera_info_1" to="left_rgbd/optical/camera_info"/>
        <remap if="$(eval 'explorer_x1' in robot_type.lower())"
               from="camera_info_2" to="right_rgbd/optical/camera_info"/>
        <remap if="$(eval 'explorer_x1' in robot_type.lower())"
               from="camera_info_3" to="rear_rgbd/optical/camera_info"/>
               
        <!-- tradr cameras topics -->
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="camera_info_0" to="viz/camera_0/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="camera_info_1" to="viz/camera_1/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="camera_info_2" to="viz/camera_2/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="camera_info_3" to="viz/camera_3/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="camera_info_4" to="viz/camera_4/camera_info"/>
        <remap if="$(eval 'tradr' in robot_type.lower())"
               from="camera_info_5" to="viz/camera_5/camera_info"/>

        <remap from="map" to="/cloud_from_gt_mesh"/>
        <remap from="path" to="travelled_dist_publisher/route"/>
    </node>

    <!-- RVIZ -->
    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz"
          args="-d $(dirname)/../config/rewarder.rviz"/>

</launch>
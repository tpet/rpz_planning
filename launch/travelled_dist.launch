<?xml version="1.0" encoding="UTF-8" ?>

<launch>
    <arg name="robot" default="X1"/>
    <arg name="world_frame" default="subt"/>

    <!-- Travelled distance publisher -->
    <node ns="$(arg robot)" name="travelled_dist_publisher" pkg="rpz_planning" type="travelled_dist.py" output="screen">
    	<rosparam subst_value="true">
            robot: $(arg robot)
            world_frame: $(arg world_frame)
        </rosparam>
    </node>

</launch>

<?xml version="1.0" encoding="UTF-8" ?>

<launch>
    <arg name="reward_cloud_topic" default="reward_cloud"/>
    <arg name="pts_proximity_th" default="0.3"/>

    <node name="rewards_accumulator" pkg="rpz_planning" type="rewards_accumulator.py" output="screen">
        <rosparam subst_value="true">
            reward_cloud_topic: $(arg reward_cloud_topic)
            pts_proximity_th: $(arg pts_proximity_th)
            max_age: 5.0
            reward_cloud_rate: 0.3
        </rosparam>
    </node>

</launch>
